{
    "id": "online.winehub.Platform.berkelydb",
    "branch": "1.6",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk-extensions": [],
    "separate-locales": false,
    "appstream-compose": false,
    "cleanup": [
    ],
    "build-options": {
        "cflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "cxxflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now",
        "prefix": "/usr/lib/berkelydb",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "berkelydb",
            "config-opts": [
		    "--enable-compat185",
		    "--enable-shared",
		    "--enable-static",
		    "--enable-cxx",
		    "--enable-dbm",
		    "--enable-stl"
            ],
            "sources": [
			{
				"type": "archive" ,
				"url": "http://download.oracle.com/berkeley-db/db-5.3.28.tar.gz",
				"sha256": "e0a992d740709892e81f9d93f06daf305cf73fb81b545afe72478043172c3628"
			},
			{
				"type": "script",
				"dest-filename": "configure",
				"commands": [
					"./dist/configure $@"
				]
			
			}
            ],
	    "make-install-args": [
		    "LIBSO_LIBS=-lpthread"
	    ]

        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp online.winehub.Platform.berkelydb.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=online.winehub.Platform.berkelydb --prefix=${FLATPAK_DEST} --origin=flatpak online.winehub.Platform.berkelydb"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "online.winehub.Platform.berkelydb.appdata.xml"
                }
            ]
        }
    ]
}

